@using calisartik.Models
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="~/css/bootstrap.css" />
	<link href="~/css/bootstrap-grid.min.css" rel="stylesheet" />
	<link href="~/Content/font-awesome.css" rel="stylesheet" />
	<title>@ViewBag.Title</title>
	<style>
		.dropdown:hover .dropdown-menu {
			display: block;
		}
	</style>
	@{
		bool loggedIn = (System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated;
	}
</head>
<body>
	<script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
	<script type="text/javascript" src="~/js/popper.min.js"></script>
	<script type="text/javascript" src="~/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

	<nav class="navbar navbar-expand-lg navbar-light bg-light " style="height: 140px; padding-top: 20px;">
		<h2 class="text float-center ml-5">
			<a href="/Home/index" style="color: black; font-family: SFMono-Regular;text-decoration: none ">NURŞAH KARA</a>
			<p style="font-size: 18px; font-weight: lighter;"> <span>Yazılım, Donanım</span></p>
		</h2>
		<br>
		<p class="float-left">

	</nav>


	<nav class="navbar navbar-expand-lg navbar-light bg-dark ">
		<a class="navbar-brand col-2" href="/Home/index"><img src=" ~/images/logowhite.png" style="width:20%;"> </a>
		<button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavDropdown">
			<ul class="navbar-nav">
				<li class="nav-item active col-1 mr-5 ">
					<a class="nav-link" href="/Home/index" style="color: #f8f9fa;">Anasayfa </a>
				</li>
				<li class="nav-item col-1 mr-5 ml-4">
					<a class="nav-link" href="/Home/Makaleler" style="color: #f8f9fa;">Makaleler</a>
				</li>
				<li class="nav-item dropdown col-1 mr-5 ml-4 ">
					<a class="nav-link dropdown-toggle" href="/Home/kodlama" style="color: #f8f9fa;" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Teorik
					</a>					
					<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

						<a class="dropdown-item" href="/Home/c">REACT-NATIVE</a>
						<a class="dropdown-item" href="/Home/cplus">C++</a>
						<a class="dropdown-item" href="/Home/csharp">C#</a>
						<a class="dropdown-item" href="/Home/java">JAVA</a>
						<a class="dropdown-item" href="/Home/html">HTML/CSS/JAVASCRIPT</a>
						<a class="dropdown-item" href="/Home/veritabanlari">Veri Tabanı</a>
						<a class="dropdown-item" href="/Home/mobil">Mobil</a>
				
					</div>
				</li>
				<li class="nav-item col-1 mr-5 ml-4">
					<a class="nav-link" href="/Home/hakkimda" style="color: #f8f9fa;">Hakkımda</a>
				</li>
				<li class="nav-item col-1 mr-5 ml-4">
					<a class="nav-link" href="/Home/iletisim" style="color: #f8f9fa;">İletişim</a>
				</li>
			</ul>
			@if (!loggedIn)
			{
				<ul class="navbar-nav col-4 pl-5 float-left">
					<li class="nav-item ">
						<small>
							<a class="nav-link " href="#" style="color: #f8f9fa;" data-toggle="modal" data-target="#modaluyeol">Üye Ol!</a>
						</small>
					</li>
					<li class="nav-item ">
						<small>
							<a class="nav-link " href="#" style="color: #f8f9fa;" data-toggle="modal" data-target="#modalgiris">Giriş Yap!</a>
						</small>
					</li>
				</ul>
			}
			@if (loggedIn)
			{
				<ul class="navbar-nav ml-n5 col-4 float-left">
					<li class="nav-item ">
						<small>
							<a class="nav-link " href="#" style="color: #f8f9fa;" >@User.Identity.Name</a>
						</small>
					</li>
					<li class="nav-item ">
						<small>
							<a class="nav-link " href="/Home/Logout" style="color: #f8f9fa;">Çıkış</a>
						</small>
					</li>
				</ul>
			}

		</div>
	</nav>
	@Html.Partial("Partial", new IndexViewModel())
	
	@RenderBody()
	

	<!-- Modal giriş -->
	<div class="modal fade" style="margin-top:100px;" id="modalgiris" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

		<div class="modal-dialog" role="document">
			<div class="modal-content" style="background:url(/images/arkap4.jpg);background-size:100%;back">

				<div class="modal-header">
					<img src="~/images/avatar.png" style="margin-left:40%;border-radius:50%;z-index: 9;margin-top: -40px; width:100px; height:100px;" />

					<h5 class="modal-title " id="exampleModalLabel" style="margin-top:72px; margin-left:-20%">Giriş Yap</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form action="/Home/Login" method="Post">
						<center>
							<input class="mb-2 pl-2" type="email" name="email" placeholder="E-mail"style="width:300px;" required />
							<br />
							<input class="mb-2 pl-2 mail-bulk" type="password" name="sifre" placeholder="Parola" style="width:300px;" required />
							<br />
							<button type="submit" class="btn btn-outline-secondary">Giriş Yap</button>
						</center>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal üyeol -->
	<div class="modal fade" style="margin-top:40px;" id="modaluyeol" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

		<div class="modal-dialog" role="document">
			<div class="modal-content" style="background:url(/images/arkap4.jpg);background-size:100%">

				<div class="modal-header">
					<img src="~/images/avatar.png" style="margin-left:40%;border-radius:50%;z-index: 9;margin-top: -40px; width:100px; height:100px;" />

					<h5 class="modal-title " style="margin-top:72px; margin-left:-18%">Üye Ol</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form action="/Home/Register" method="Post">
						<center>
							<input class="mb-2 pl-2" type="text" name="adSoyad" placeholder="Ad Soyad" style="width:300px;" required />
							<br />
							<input class="mb-2 pl-2" type="email" name="email" placeholder="E-mail"  style="width:300px;" required />
							<br />
							<input class="mb-2 pl-2" type="password" name="sifre" placeholder="Parola"  style="width:300px;" required />
							<br />
							<button type="submit" class="btn btn-outline-secondary">Kayıt Ol</button>
						</center>
					</form>
				</div>
			</div>
		</div>
	</div>
	<footer class="card-footer navbar-light bg-dark w-100" style="height: 100px; padding-left: 70px;">
		<small class="text-muted" style=" font-family: Helvetica;">
			Tüm Hakları Saklıdır © 2019 Nurşah KARA<br>Email: nursahh.kara@gmail.com
		</small>
	</footer>
</body>

</html>